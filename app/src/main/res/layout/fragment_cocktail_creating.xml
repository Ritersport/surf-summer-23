<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/cocktailImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_photo_camera_24"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Title">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title"
                style="@style/DefaultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add title"
            style="@style/DefaultText"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/description_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="154dp"
            android:layout_marginTop="16dp"
            android:hint="Description">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description"
                style="@style/DefaultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="154dp"
                android:enabled="false"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optional field"
            style="@style/DefaultText"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/recipe_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="154dp"
            android:layout_marginTop="16dp"
            android:hint="Recipe">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/recipe"
                style="@style/DefaultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="154dp"
                android:enabled="false"
                android:inputType="textCapWords" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optional field"
            style="@style/DefaultText"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:fontFamily="@font/didact_gothic_regular"
            android:textColor="@color/white"
            android:textSize="36dp"
            android:backgroundTint="#4B97FF"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:fontFamily="@font/didact_gothic_regular"
            android:textColor="#4B97FF"
            android:textSize="36dp"
            app:strokeColor="#4B97FF"
            app:strokeWidth="1dp"/>
    </LinearLayout>

</ScrollView>